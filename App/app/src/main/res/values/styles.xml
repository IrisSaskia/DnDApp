<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/alice</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="CustomTitleBar" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_image_height</item>
        <item name="android:layout_marginTop">@dimen/fragment_margin</item>
        <item name="android:alpha">@dimen/cohesion_opacity</item>
        <item name="android:background">@drawable/title_background</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_image_height</item>
        <item name="android:layout_marginTop">@dimen/fragment_margin</item>
        <item name="android:alpha">@dimen/cohesion_opacity</item>
        <item name="android:background">@null</item>
        <item name="tabBackground">@drawable/custom_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/text_color</item>
        <item name="tabSelectedTextColor">@color/text_color</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabPaddingStart">@dimen/tab_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_padding</item>
    </style>

    <style name="CustomFAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/button_border_color</item>
        <item name="android:tint">@color/text_color</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="android:alpha">@dimen/cohesion_opacity</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ConstraintStatHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageViewStatBackgroundHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alpha">@dimen/cohesion_opacity</item>
        <item name="srcCompat">@drawable/home_stat_background</item>
        <item name="android:contentDescription">@string/background_stat_description</item>
    </style>

    <style name="StatNameHome">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatNumberHome" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/stat_placeholder</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatSaveModNameHome" parent="Widget.AppCompat.TextView">
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatSaveModNumberHome" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/save_mod_placeholder</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>